<Window x:Class="ultra_comment_viewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        
        xmlns:local="clr-namespace:ultra_comment_viewer"
        mc:Ignorable="d"
    Title="MainWindow" Height="1200" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*" MinHeight="20"/>
            <RowDefinition Height="20*" MinHeight="20"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="180*" MinHeight="40" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40*" MinWidth="70"/>
            <ColumnDefinition Width="8"/>
            <ColumnDefinition Width="600*" MinWidth="200"/>
        </Grid.ColumnDefinitions>

        <!--================== MenuBar =================================-->
        <md:Card
            Content="Card"
            Grid.ColumnSpan="3"
            Grid.Row="0"
            Background="Chocolate"
            />

        <!--================== DropZoneArea   ==========================-->
        <md:Card
            Content="Card"
            Grid.Column="0"
            Grid.Row="3"
            Background="Azure"
            />

        <!--================== URLフォームエリア ========================= -->
        <md:Card
            Content="Card"
            Grid.Column="2"
            Grid.Row="1"
            Background="AntiqueWhite"
            />
        <!-- ============ドロップゾーン -*- コメントエリア =================== -->
        <GridSplitter
            Grid.Column="1"
            Grid.Row="3"
            Style="{StaticResource VerticalGridSplitter}"
            />
        <!-- ================= URLフォーム -*- コメントエリア==============  -->
        <GridSplitter
            Grid.Column="2"
            Grid.Row="2"
            Style="{StaticResource HorizontalGridSplitter}"
            />
        <!-- ================= コメントエリア ========================== -->
        <md:Card
            Background="AliceBlue"         
            Grid.Column="2" 
            Grid.Row="3" >
            <ListView x:Name="CommentList">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid
                            Width="600"
                            >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="80*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="20"/>
                            </Grid.RowDefinitions>
                            <!-- ユーザーアイコン -->
                            <Image 
                                Source="{Binding Image}"
                                Grid.Row="0"
                                Grid.Column="0"
                                />
                            <!-- ユーザーネーム -->
                            <TextBlock
                                Text="{Binding UserName}"
                                Grid.Row="1"
                                Grid.Column="0"
                                />
                            <!-- コメント -->
                            <md:Card
                                Grid.RowSpan="2"
                                Grid.Column="3"
                                Grid.ColumnSpan="3"
                                md:UniformCornerRadius="20"
                                Background="GreenYellow"
                                >
                                <TextBlock
                                Text="{Binding Comment}"
                                />
                            </md:Card>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </md:Card>


    </Grid>
</Window>
