<Window x:Class="ultra_comment_viewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:converter="clr-namespace:ultra_comment_viewer.src.view.converter"
        xmlns:local="clr-namespace:ultra_comment_viewer"
        xmlns:prism="http://prismlibrary.com/"
        
        prism:ViewModelLocator.AutoWireViewModel="True"
        mc:Ignorable="d"
    Title="MainWindow" Height="1200" Width="800">
    <Window.Resources>
        <converter:BoolToStringConverter x:Key="TestConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*" MinHeight="20"/>
            <RowDefinition Height="20*" MinHeight="20"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="180*" MinHeight="40" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40*" MinWidth="70"/>
            <ColumnDefinition Width="8"/>
            <ColumnDefinition Width="600*" MinWidth="200"/>
        </Grid.ColumnDefinitions>

        <!--================== MenuBar =================================-->
        <md:Card
            Content="Card"
            Grid.ColumnSpan="3"
            Grid.Row="0"
            Background="Chocolate"
            />

        <!--================== DropZoneArea   ==========================-->
        <md:Card
            Grid.Column="0"
            Grid.Row="3"
            Background="Azure"
            >
            <Grid
                Margin="10"
                >
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <!-- URLドロップゾーン -->
                <md:Card
                    Grid.Row="0"
                    Background="Red"
                    Margin="5,5,5,5"
                    AllowDrop="True"
                    Drop="EventDropOnUrlMark"
                    />
                <!-- URLドロップゾーン -->
                <md:Card
                    Grid.Row="1"
                    Background="Blue"
                    Margin="5,5,5,5"
                    AllowDrop="True"
                    Drop="EventDropOnUrlMark"
                    />
                <!-- URLドロップゾーン -->
                <md:Card
                    Grid.Row="2"
                    Background="Yellow"
                    Margin="5,5,5,5"
                    />
                <!-- URLドロップゾーン -->
                <md:Card
                    Grid.Row="3"
                    Background="Green"
                    Margin="5,5,5,5"
                    />
            </Grid>
        </md:Card>

        <!--================== URLフォームエリア ========================= -->
        <md:Card
            Grid.Column="2"
            Grid.Row="1"
            Background="AntiqueWhite"
            >
            <StackPanel
                Orientation="Vertical"
                >
                <!-- TwicasURlForm -->
                <StackPanel
                    Orientation="Horizontal"
                    >
                    <TextBox
                        
                        Width="600"
                        Text="{Binding Url, UpdateSourceTrigger=PropertyChanged}"                        TextChanged="EventChangedUrlTextBox"
                      
                        md:HintAssist.Hint="Twicasの放送URlを入力して下さい"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        VerticalAlignment="Center"
                        
                         />
                    <Button
                        Content="{Binding IsConnect,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource TestConverter}}"
                        Width="60"
                        Margin="10 0 0 0"
                        Height="25" 
                        Cursor="Hand"
                        IsEnabled="{Binding IsWriteUrl}"
                        Click="EventClickConnectionButtonHandler"
                        />

                </StackPanel>
                <!-- NiconicoUrlForm -->
                <StackPanel></StackPanel>
            </StackPanel>
        </md:Card>
        <!-- ============ドロップゾーン -*- コメントエリア =================== -->
        <GridSplitter
            Grid.Column="1"
            Grid.Row="3"
            Style="{StaticResource VerticalGridSplitter}"
            />
        <!-- ================= URLフォーム -*- コメントエリア==============  -->
        <GridSplitter
            Grid.Column="2"
            Grid.Row="2"
            Style="{StaticResource HorizontalGridSplitter}"
            />
        <!-- ================= コメントエリア ========================== -->
        <md:Card
            Background="AliceBlue"         
            Grid.Column="2" 
            Grid.Row="3" >
            <ListView 
                x:Name="CommentList"
                ScrollViewer.ScrollChanged="EventScrollChangedUpdateAutoScrollFlag"
                >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel
                            Orientation="Horizontal"
                            Height="50"
                            >
                            <StackPanel
                                Width="70"
                                Margin="0 0 20 0"
                                >
                                <!-- ユーザーアイコン -->
                                <Image 
                                    Height="30"
                                    Width="30"
                                    Source="{Binding Image}"
                                    Grid.Row="0"
                                    Grid.Column="0"
                                   />
                                <!-- ユーザーネーム -->
                                <TextBlock
                                    
                                    TextWrapping="Wrap"
                                    Text="{Binding UserName}"
                                    FontSize="8"
                                    />
                            </StackPanel>

                            <!-- コメント -->
                            <md:Card
                                Cursor="Hand"
                                MouseMove="Card_MouseMove"
                                VerticalAlignment="Top"
                                Width="600"
                                md:UniformCornerRadius="7"
                                Background="{Binding CommentColor}"
                                >
                                <TextBlock
                                    Margin="15"
                                    HorizontalAlignment="Left"
                                    FontSize="10"
                                    Text="{Binding Comment}"
                                />
                            </md:Card>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </md:Card>


    </Grid>
</Window>
